<UserControl x:Class="Weather.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Weather.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">

    <Border BorderBrush="#E0E0E0" 
            BorderThickness="0,0,0,1"
            Background="White"
            Padding="10,8">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100"/>
                <ColumnDefinition Width="*" MinWidth="140"/>
                <ColumnDefinition Width="*" MinWidth="120"/>
                <ColumnDefinition Width="*" MinWidth="140"/>
                <ColumnDefinition Width="*" MinWidth="100"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#F5F5F5"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="2">
                <Label x:Name="lHour" 
                       Content="12:00"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Medium"
                       Foreground="#333333"
                       Padding="0"/>
            </Border>

           
            <Border Grid.Column="1"
                    Background="#E8F5E8"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="2">
                <Label x:Name="lCondition" 
                       Content="Ясно"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Foreground="#2E7D32"
                       Padding="0"/>
            </Border>

            <Border Grid.Column="2"
                    Background="#E3F2FD"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="2">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Label Content=""
                           Padding="0,0,4,0"
                           Foreground="#1976D2"/>
                    <Label x:Name="lHumidity" 
                           Content="65%"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Foreground="#1565C0"
                           Padding="0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3"
                    Background="#F3E5F5"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="2">
                <Label x:Name="lPrecType" 
                       Content="Без осадков"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Foreground="#7B1FA2"
                       Padding="0"/>
            </Border>

            <Border Grid.Column="4"
                    Background="#FFF3E0"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="2">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Label x:Name="lTemp" 
                           Content="+24°C"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#EF6C00"
                           Padding="0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>