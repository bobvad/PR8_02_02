<UserControl x:Class="Weather.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Weather.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="138"/>
            <ColumnDefinition Width="Auto" MinWidth="168"/>
            <ColumnDefinition Width="Auto" MinWidth="169"/>
            <ColumnDefinition Width="Auto" MinWidth="178"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Час - фиксированная ширина -->
        <Label x:Name="lHour" 
               Grid.Column="0"
               MinWidth="60"
               HorizontalContentAlignment="Center"/>

        <!-- Условия - фиксированная ширина -->
        <Label x:Name="lCondition" 
               Grid.Column="1"
               MinWidth="120"
               HorizontalContentAlignment="Center"/>

        <!-- Влажность - фиксированная ширина -->
        <Label x:Name="lHumidity" 
               Grid.Column="2"
               MinWidth="80"
               HorizontalContentAlignment="Center"/>

        <!-- Тип осадков - фиксированная ширина -->
        <Label x:Name="lPrecType" 
               Grid.Column="3"
               MinWidth="100"
               HorizontalContentAlignment="Center"/>

        <!-- Температура - оставшееся пространство -->
        <Label x:Name="lTemp" 
               Grid.Column="4"
               MinWidth="100"
               HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>