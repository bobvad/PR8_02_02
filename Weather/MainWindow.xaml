<Window x:Class="Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="Прогноз погоды" Height="450" Width="800">

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#FFFFFF" 
                Padding="10"
                BorderBrush="#CCCCCC"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">

                <Border Background="#FFFFFF"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="4"
                        Width="250"
                        Height="35">
                    <TextBox x:Name="CityBox"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="8,0"
                             BorderThickness="0"
                             Background="Transparent"
                             Text="Введите город..."
                             Foreground="Gray"
                             KeyDown="CityBox_KeyDown">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                <Button x:Name="SearchButton"
                        Content="Поиск"
                        Width="80"
                        Height="35"
                        Margin="10,0,0,0"
                        Background="#4A90E2"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="SearchButton_Click"/>

                <ComboBox x:Name="Days" 
                         Width="150"
                         Height="35"
                         Margin="20,0,0,0"
                         FontSize="14"
                         SelectionChanged="SelectDay"/>

                <Button Content="Обновить"
                        Width="100"
                        Height="35"
                        Margin="20,0,0,0"
                        Background="#7ED321"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="UpdateWeather"/>

            </StackPanel>
        </Border>

        <Border Grid.Row="1" 
                Background="#FFFFFF"
                Margin="10">
            <ScrollViewer>
                <StackPanel x:Name="parent" 
                            Margin="5">
                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>